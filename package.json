{
  "name": "t4-app-monorepo",
  "private": true,
  "license": "Apache-2.0",
  "version": "2.0.0",
  "scripts": {
    "dev": "turbo dev --parallel --filter={next-app,@t4/api}",
    "ios": "cd apps/expo && bun ios",
    "android": "cd apps/expo && bun android",
    "web": "turbo run dev --filter next-app",
    "api": "cross-env NO_D1_WARNING=true turbo run dev --filter @t4/api",
    "notes": "turbo run dev --filter t4-app-docs",
    "native": "cd apps/expo && bun dev",
    "studio": "cd packages/api && bun studio",
    "native:prod": "cd apps/expo && bun dev:prod",
    "build": "cd packages/ui && tamagui-build",
    "build:web": "turbo run build --filter=next-app",
    "build:ios": "cd apps/expo && bun build:ios",
    "build:android": "cd apps/expo && bun build:android",
    "build:ios:preview": "cd apps/expo && bun build:ios:preview",
    "build:android:preview": "cd apps/expo && bun build:android:preview",
    "submit:android": "cd apps/expo && eas submit --platform android --path ./app-release.aab",
    "generate": "bun --filter=@t4/api generate",
    "migrate:local": "bun --filter=@t4/api migrate:local",
    "seed:local": "bun --filter=@t4/api seed:local",
    "migrate": "bun --filter=@t4/api migrate",
    "seed": "bun --filter=@t4/api seed",
    "upgrade:tamagui": "bun up -r '*tamagui*'@latest '@tamagui/*'@latest react-native-web-lite@latest",
    "check-deps": "check-dependency-version-consistency .",
    "check-types": "tsc --noEmit",
    "fix": "manypkg fix",
    "postinstall": "bun run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@babel/runtime": "^7.22.15",
    "@manypkg/cli": "^0.21.0",
    "@nderscore/tamagui-typescript-plugin": "^0.5.4",
    "@supabase/supabase-js": "^2.33.1",
    "check-dependency-version-consistency": "^4.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.49.0",
    "node-gyp": "^9.4.0",
    "prettier": "^3.0.3",
    "react-native-url-polyfill": "^2.0.0",
    "turbo": "^1.10.13",
    "typescript": "^5.2.2",
    "workerd": "1.20230904.0"
  },
  "engines": {
    "node": ">=18.16.1",
    "bun": ">=8.6.6"
  }
}
